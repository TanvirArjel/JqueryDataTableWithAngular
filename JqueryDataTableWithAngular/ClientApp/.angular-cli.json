{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "AngularWithASPNETCoreWebAPI"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.css",
        "../node_modules/bootstrap/dist/css/bootstrap.css",
        "vendors/data-tables/css/dataTables.bootstrap4.min.css",
        "vendors/data-tables/css/fixedColumns.bootstrap4.min.css",
        "vendors/data-tables/css/buttons.bootstrap4.min.css"
      ],
      "scripts": [
        "../node_modules/jquery/dist/jquery.min.js",
        "vendors/data-tables/js/jquery.dataTables.min.js",
        "vendors/data-tables/js/dataTables.bootstrap4.min.js",
        "vendors/data-tables/js/dataTables.fixedColumns.min.js",
        "vendors/data-tables/js/dataTables.buttons.min.js",
        "vendors/data-tables/js/buttons.bootstrap4.min.js",
        "vendors/data-tables/js/buttons.flash.min.js",
        "vendors/data-tables/js/jszip.min.js",
        "vendors/data-tables/js/buttons.html5.min.js",
        "vendors/data-tables/js/buttons.print.min.js",
        "vendors/data-tables/js/buttons.colVis.min.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {},
    "build": {
      "progress": true
    }
  }
}
